extends ../layout/admin

block styles
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.3/dropzone.css")

block contenido

    div(class='bg-white shadow py-8 px-4 rounded-lg mx-auto max-w-4xl my-10 md:px-10')
        form(class='dropzone border-dashed border-2 w-full min:h-96 h-auto rounded flex-col justify-center items-center' method="POST" action="/propiedades/crear")
            input(type='hidden' name='_csrf' value=csrfToken)

        input(class='mt-5 w-full py-3 bg-indigo-600 hover:bg-indigo-700 rounded-xl text-white font-bold uppercase cursor-pointer' type='submit' value='Publicar propiedad')

block scripts
    script(src='/js/agregarImagen.js')