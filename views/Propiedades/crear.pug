extends ../layout/index

block contenido

    div(class='bg-white shadow py-8 px-4 rounded-lg mx-auto max-w-4xl my-10 md:px-10')
        form.space-y-5
            div.space-y-5
                h3.text-lg.leading-6.font-medium.text-gray-900 Información general
                p.text-gray-600 Añade información sobre la propiedad en venta
                div
                    label.block.text-sm.text-gray-600.mb-2.font-bold(for="TituloAnuncio") Titulo de anuncio
                    input#TituloAnuncio.w-full.px-3.py-2.border.border-gray-300.rounded-xl.placeholder-gray-400(placeholder='Escribe un título para tu anuncio' type='text' name='TituloAnuncio')
                    
                div(class='md:flex md:gap-4 space-y-5 md:space-y-0') 
                    div(class='md:w-1/2')
                        label.block.text-sm.text-gray-600.mb-2.font-bold(for="Categoria") Categoría
                        select#categoria.w-full.px-3.py-2.border.border-gray-300.rounded-xl.placeholder-gray-400(placeholder='Categoría' type='text' name='Categoria')
                            option(value='') - Seleccione - 
                    div(class='md:w-1/2')
                        label.block.text-sm.text-gray-600.mb-2.font-bold(for="Precio") Precio
                        select#Precio.w-full.px-3.py-2.border.border-gray-300.rounded-xl.placeholder-gray-400(placeholder='Precio' type='text' name='Precio')
                            option(value='') - Seleccione - 

                div(class='md:flex md:gap-4 space-y-5 md:space-y-0') 
                    div(class='md:w-1/3')
                        label.block.text-sm.text-gray-600.mb-2.font-bold(for="Habitaciones") Habitaciones
                        select#Habitaciones.w-full.px-3.py-2.border.border-gray-300.rounded-xl.placeholder-gray-400(placeholder='Habitaciones' type='text' name='Habitaciones')
                            option(value='') - Seleccione - 
                            - let hab = 1;
                                while hab < 6
                                    option(value=hab) #{hab++}

                    div(class='md:w-1/3')
                        label.block.text-sm.text-gray-600.mb-2.font-bold(for="Estacionamiento") Estacionamiento
                        select#Estacionamiento.w-full.px-3.py-2.border.border-gray-300.rounded-xl.placeholder-gray-400(placeholder='Estacionamiento' type='text' name='Estacionamiento')
                            option(value='') - Seleccione - 
                            - let estcn = 1;
                                while estcn < 3
                                    option(value=estcn) #{estcn++}

                    div(class='md:w-1/3')
                        label.block.text-sm.text-gray-600.mb-2.font-bold(for="wc") wc
                        select#wc.w-full.px-3.py-2.border.border-gray-300.rounded-xl.placeholder-gray-400(placeholder='wc' type='text' name='wc')
                            option(value='') - Seleccione - 
                            - let wcs = 1;
                                while wcs < 5
                                    option(value=wcs) #{wcs++} 